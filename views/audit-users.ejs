<!doctype html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <title>User Grid | BloggyStories </title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <meta content="BloggyStories" name="author">
    <!-- App favicon -->
    <link rel="shortcut icon" href="/IMAGES/logo.svg">
    <link
        href="https://fonts.googleapis.com/css?family=Work+Sans:100,200,300,regular,500,600,700,800,900,100italic,200italic,300italic,italic,500italic,600italic,700italic,800italic,900italic"
        rel="stylesheet" />

    <!-- preloader css -->
    <link rel="stylesheet" href="/assets/css/preloader.min.css" type="text/css">

    <!-- Bootstrap Css -->
    <link href="/assets/css/bootstrap.min.css" id="bootstrap-style" rel="stylesheet" type="text/css">
    <!-- Icons Css -->
    <link href="/assets/css/icons.min.css" rel="stylesheet" type="text/css">
    <!-- App Css-->
    <link href="/assets/css/app.min.css" id="app-style" rel="stylesheet" type="text/css">

</head>

<body data-layout-mode="dark" data-topbar="dark" data-sidebar="dark" data-sidebar-size="lg" class="sidebar-enable">

    <!-- <body data-layout="horizontal"> -->

    <!-- Begin page -->
    <div id="layout-wrapper">


        <%- include('includes/header.ejs') %> 

        <!-- ========== Left Sidebar Start ========== -->
        <%- include('includes/'+ nav +'.ejs') %>
            <!-- Left Sidebar End -->



            <!-- ============================================================== -->
            <!-- Start right Content here -->
            <!-- ============================================================== -->
            <div class="main-content">

                <div class="page-content">
                    <div class="container-fluid">

                        <!-- start page title -->
                        <div class="row">
                            <div class="col-12">
                                <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                                    <h4 class="mb-sm-0 font-size-18">User Grid</h4>

                                    <div class="page-title-right">
                                        <ol class="breadcrumb m-0">
                                            <li class="breadcrumb-item"><a href="javascript: void(0);">Users</a></li>
                                            <li class="breadcrumb-item active">Authors</li>
                                        </ol>
                                    </div>

                                </div>
                            </div>
                        </div>
                        <!-- end page title -->

                        <div class="row align-items-center">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <h5 class="card-title">Users<span
                                            class="text-muted fw-normal ms-2">(<%- userLength %>)</span></h5>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="d-flex flex-wrap align-items-center justify-content-end gap-2 mb-3">
                                    <div>
                                        <a href="#" class="btn btn-light"><i class="bx bx-plus me-1"></i> Add New</a>
                                    </div>
                                </div>

                            </div>
                        </div>
                        <!-- end row -->

                        <div class="row">
                            <% users.forEach(user=>{ %>
                                <div class="col-xl-3 col-sm-6">
                                    <div class="card text-center">
                                        <div class="card-body">

                                            <div class="mx-auto mb-4">
                                                <img src="<%- user.profile_image  %>" alt=""
                                                    class="avatar-xl rounded-circle img-thumbnail">
                                            </div>
                                            <h5
                                                class="font-size-16 mb-1 d-flex align-items-center justify-content-center">
                                                <a href="#" class="text-dark"><%- user.name %></a><span
                                                    class="dot ms-2 d-inline-block <% if(user.status === 'public'){%> <%- 'bg-success'  %><%}else{%><%- 'bg-danger'  %><% } %>  rounded-circle"
                                                    style="height: 5px;width: 5px;"></span></h5>
                                            <p class="text-muted mb-2"><%- user.user_name %></p>

                                        </div>

                                        <div class="btn-group" role="group">
                                            <button type="button" class="btn btn-outline-light text-truncate"
                                                onclick="thisUser('<%-  user.user_name %>','enable')">Enable</button>
                                            <button type="button" class="btn btn-outline-light text-truncate"
                                                onclick="thisUser('<%-  user.user_name %>','disable')">Disable</button>
                                            <button type="button"
                                                class="btn btn-outline-light bg-danger text-white text-truncate"
                                                onclick="thisUser('<%-  user.user_name %>','delete')">Delete</button>

                                        </div>
                                    </div>
                                    <!-- end card -->
                                </div>
                                <% }) %>
                        </div>

                    </div> <!-- container-fluid -->
                </div>
                <!-- End Page-content -->


                <footer class="footer">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-sm-6">
                                <script>document.write(new Date().getFullYear())</script> © BloggyStories.
                            </div>
                            <div class="col-sm-6">
                                <div class="text-sm-end d-none d-sm-block">
                                    Design & Develop by <a href="/" class="text-decoration-underline">BloggyStories</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </footer>
            </div>
            <!-- end main content-->

    </div>

    <!-- Right bar overlay-->
    <div class="rightbar-overlay"></div>

    <!-- JAVASCRIPT -->
    <script src="/assets/libs/jquery/jquery.min.js"></script>
    <script src="/assets/libs/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="/assets/libs/metismenu/metisMenu.min.js"></script>
    <script src="/assets/libs/simplebar/simplebar.min.js"></script>
    <script src="/assets/libs/node-waves/waves.min.js"></script>
    <script src="/assets/libs/feather-icons/feather.min.js"></script>


    <script src="/JS/functions.js"></script>
    <script src="/assets/js/app.js"></script>
    <script>
        feather.replace()
    </script>

</body>

</html>