<!doctype html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <title>Email Inbox | BloggyStories </title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <meta content="BloggyStories" name="author">
    <!-- App favicon -->
    <link rel="shortcut icon" href="/IMAGES/logo.svg">
    <link
        href="https://fonts.googleapis.com/css?family=Work+Sans:100,200,300,regular,500,600,700,800,900,100italic,200italic,300italic,italic,500italic,600italic,700italic,800italic,900italic"
        rel="stylesheet" />

    <!-- preloader css -->
    <link rel="stylesheet" href="/assets/css/preloader.min.css" type="text/css">

    <!-- Bootstrap Css -->
    <link href="/assets/css/bootstrap.min.css" id="bootstrap-style" rel="stylesheet" type="text/css">
    <!-- Icons Css -->
    <link href="/assets/css/icons.min.css" rel="stylesheet" type="text/css">
    <!-- App Css-->
    <link href="/assets/css/app.min.css" id="app-style" rel="stylesheet" type="text/css">

</head>

<body data-layout-mode="dark" data-topbar="dark" data-sidebar="dark" data-sidebar-size="lg">

    <!-- <body data-layout="horizontal"> -->

    <!-- Begin page -->
    <div id="layout-wrapper">


        <%- include('includes/header.ejs') %>

            <!-- ========== Left Sidebar Start ========== -->
            <%- include('includes/'+ nav +'.ejs') %>

                <!-- Left Sidebar End -->



                <!-- ============================================================== -->
                <!-- Start right Content here -->
                <!-- ============================================================== -->
                <div class="main-content">

                    <div class="page-content">
                        <div class="container-fluid">

                            <!-- start page title -->
                            <div class="row">
                                <div class="col-12">
                                    <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                                        <h4 class="mb-sm-0 font-size-18">Alert</h4>

                                        <div class="page-title-right">
                                            <ol class="breadcrumb m-0">
                                                <li class="breadcrumb-item"><a href="javascript: void(0);">Home</a></li>
                                                <li class="breadcrumb-item active">Alert</li>
                                            </ol>
                                        </div>

                                    </div>
                                </div>
                            </div>
                            <!-- end page title -->

                            <div class="row">
                                <div class="col-12">
                                    <!-- Left sidebar -->
                                    <div class="email-leftbar card">
                                        <button type="button" class="btn btn-danger w-100 waves-effect waves-light"
                                            data-bs-toggle="modal" data-bs-target="#composemodal">
                                            New Alert
                                        </button>

                                    </div>
                                    <!-- End Left sidebar -->


                                    <!-- Right Sidebar -->
                                    <div class=" mb-3">

                                        <div class="card p-3">
                                            <div class="d-flex justify-content-between align-items-center">
                                                <h4>All Alerts</h4>
                                                <strong>View Count</strong>
                                            </div>

                                            <ul class="row list-unstyled p-3 m-0">
                                                <% alerts.forEach(alert=>{ %>
                                                    <li
                                                        class="p-3 mb-3 rounded-1 align-items-center bg-page-bg row justify-content-between">
                                                        <p class="m-0 p-0 col-8"><%- alert.message %> <br><span
                                                                    class="d-inline-block mt-2 text-capitalize btn-sm btn btn-info">
                                                                    <%- alert.page %> Users Alert</span></p>
                                                        <button class="btn btn-sm btn-danger deleteAlert col-3"
                                                            data-alert="<%- alert._id  %>"><i
                                                                class="fa fa-trash" aria-hidden="true"></i></button>
                                                    </li>
                                                    <% }) %>
                                            </ul>

                                        </div> <!-- card -->

                                    </div> <!-- end Col-9 -->

                                </div>

                            </div><!-- End row -->
                        </div> <!-- container-fluid -->
                    </div>
                    <!-- End Page-content -->

                    <!-- Modal -->
                    <div class="modal fade" id="composemodal" tabindex="-1" role="dialog"
                        aria-labelledby="composemodalTitle" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title font-size-16" id="composemodalTitle">New Alert Message</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal"
                                        aria-label="Close"></button>
                                </div>
                                <form action="/<%- nav %>/sendUserAlert" method="post">
                                    <div class="modal-body">
                                        <div>
                                            <div class="mb-3">
                                                <label for="">Alert Location:</label>
                                                <select id="location" class="form-control form-select" required name="location">
                                                    <option value="paid" selected>Paid Users</option>
                                                    <option value="free">Free Users</option>
                                                </select>
                                            </div>
                                            <textarea style="min-height: 40vh;" class="mb-3 form-control form-text"
                                                name="message" required placeholder="Type your message"></textarea>
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary"
                                            data-bs-dismiss="modal">Close</button>
                                        <button type="submit" class="btn btn-primary" data-bs-dismiss="modal">Create <i
                                                class="fab fa-telegram-plane ms-1"></i></button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                    <!-- end modal -->


                </div>
                <!-- end main content-->

    </div>
    <!-- END layout-wrapper -->


    <!-- Right bar overlay-->
    <div class="rightbar-overlay"></div>

    <!-- JAVASCRIPT -->
    <script src="/assets/libs/jquery/jquery.min.js"></script>
    <script src="/assets/libs/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="/assets/libs/metismenu/metisMenu.min.js"></script>
    <script src="/assets/libs/simplebar/simplebar.min.js"></script>
    <script src="/assets/libs/node-waves/waves.min.js"></script>
    <script src="/assets/libs/feather-icons/feather.min.js"></script>

    <script src="/assets/js/app.js"></script>
    <script src="/JS/functions.js"></script>
    <script>
        feather.replace()
    </script>

</body>

</html>