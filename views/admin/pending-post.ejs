 <!doctype html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <title>Pending Post | BloggyStories </title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <meta content="BloggyStories" name="author">
    <!-- App favicon -->
    <link rel="shortcut icon" href="/IMAGES/logo.svg">
    <link
        href="https://fonts.googleapis.com/css?family=Work+Sans:100,200,300,regular,500,600,700,800,900,100italic,200italic,300italic,italic,500italic,600italic,700italic,800italic,900italic"
        rel="stylesheet" />

    <!-- preloader css -->
    <link rel="stylesheet" href="/assets/css/preloader.min.css" type="text/css">

    <!-- Bootstrap Css -->
    <link href="/assets/css/bootstrap.min.css" id="bootstrap-style" rel="stylesheet" type="text/css">
    <!-- Icons Css -->
    <link href="/assets/css/icons.min.css" rel="stylesheet" type="text/css">
    <!-- App Css-->
    <link href="/assets/css/app.min.css" id="app-style" rel="stylesheet" type="text/css">

</head>

<body data-layout-mode="dark" data-topbar="dark" data-sidebar="dark" data-sidebar-size="lg" >

    <!-- <body data-layout="horizontal"> -->

    <!-- Begin page -->
    <div id="layout-wrapper">


        <%- include('includes/header.ejs') %>

            <!-- ========== Left Sidebar Start ========== -->
            <%- include('includes/'+nav+'.ejs') %>
                ====================== -->
                <!-- Start right Content here -->
                <!-- ============================================================== -->
                <div class="main-content">

                    <div class="page-content">
                        <div class="container-fluid">

                            <!-- start page title -->
                            <div class="row">
                                <div class="col-12">
                                    <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                                        <h4 class="mb-sm-0 font-size-18">All Pending Posts</h4>

                                        <div class="page-title-right">
                                            <ol class="breadcrumb m-0">
                                                <li class="breadcrumb-item"><a href="javascript: void(0);">Manage
                                                        Posts</a></li>
                                                <li class="breadcrumb-item active">All Pending Posts</li>
                                            </ol>
                                        </div>

                                    </div>
                                </div>
                            </div>
                            <!-- end page title -->

                        </div> <!-- container-fluid -->

                        <!-- End Page-content -->
                        <div class="container clearfix mt-4">
                            <div class="row justify-content-center">
                                <% blogs.forEach( blog => { %> 
                                <div class="mb-2 col-lg-4 rounded-2">
                                    <div class="holder border border-warning overflow-hidden rounded-2 bg-page-bg">
                                        <a href="/<%- nav %>/manage/view/<%- blog.slug_id  %>/">

                                            <img src="<%- blog.image  %>" style="aspect-ratio:16/10; object-fit: cover;"
                                                class="w-100" alt=""> </a>
                                            <div class="p-3">
                                                <h3 class="mt-2"><a href="/" class="text-decoration-none text-white"><%- blog.title  %></a></h3>
                                                <p class="text-truncate"><a href="/"
                                                        class="text-decoration-none text-white"><%- blog.desc  %></a></p>
                                                <hr>
                                                <div class="d-flex align-items-center gap-3">
                                                    <img src="<%- blog.author_image  %>" class="img-fluid rounded-circle"
                                                        width="35" alt="">
                                                        <strong class="col-8"><a href="<%- blog.author_username  %>" class="text-white"><%- blog.author_name  %></a></strong>
                                                </div>
                                            </div>
                                    </div>
                                </div>
                                <% }) %> 
                            </div>
                        </div>
                    </div>

                </div>
                <footer class="footer">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-sm-6">
                                <script>document.write(new Date().getFullYear())</script> © BloggyStories.
                            </div>
                            <div class="col-sm-6">
                                <div class="text-sm-end d-none d-sm-block">
                                    Design & Develop by <a href="/" class="text-decoration-underline">BloggyStories</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </footer>
    </div>
    <!-- end main content-->

    </div>
    <!-- END layout-wrapper -->




    <!-- Right bar overlay-->
    <div class="rightbar-overlay"></div>

    <!-- JAVASCRIPT -->
    <script src="/assets/libs/jquery/jquery.min.js"></script>
    <script src="/assets/libs/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="/assets/libs/metismenu/metisMenu.min.js"></script>
    <script src="/assets/libs/simplebar/simplebar.min.js"></script>
    <script src="/assets/libs/node-waves/waves.min.js"></script>
    <script src="/assets/libs/feather-icons/feather.min.js"></script>


    <script src="/assets/js/app.js"></script>
    <script>
        feather.replace()
    </script>

</body>

</html>